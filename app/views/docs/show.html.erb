<div class="wrapper_with_padding">
  <div id="doc_show">
    <h1 class="title"> <%= @doc.title %></h1>
    <p> <%= @doc.content %></p>

    <div class="buttons">
      <%= link_to 'Edit', edit_doc_path(@doc), class: 'button' %>
      <%= link_to 'Remove', doc_path(@doc), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button' %>
    </div>
  </div>
</div>
